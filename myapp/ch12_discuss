
//콜백함수 : 매개변수를 통해서 전달받은 함수

function printName(callback) {
    callback('이것이 콜백함수다.')
}

function callback(message) {
    console.log(message);
}

printName(callback)

//공통적인 부분이 있으면 따로 빼서 사용한다.

